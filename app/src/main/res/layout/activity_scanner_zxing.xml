<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScannerZxingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scanner_zxing">

    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="@string/scan"
        app:layout_constraintStart_toStartOf="@+id/scan_content"
        app:layout_constraintTop_toBottomOf="@+id/scan_content" />

    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:text="Scan Format"
        android:textIsSelectable="true"
        app:layout_constraintStart_toStartOf="@+id/scan_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_format"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="89dp"
        android:text="Scan Content"
        android:textIsSelectable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_format" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:text="OK"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/scan_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/alerta_text"
        android:layout_width="324dp"
        android:layout_height="71dp"
        android:text="TextView"
        android:textSize="34sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="83dp" />

</androidx.constraintlayout.widget.ConstraintLayout>